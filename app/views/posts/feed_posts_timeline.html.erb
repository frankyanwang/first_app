<% title "Timeline Feed Post" %>

<div id="time_line_post">
<div id="fb-root"></div>
<script type="text/javascript" src="//platform.twitter.com/widgets.js"></script>
<% for post in @feed_posts %>

<p style = "color:red">
  <%= image_tag post.user.avatar_url(:thumbnail).to_s, :size => "30x30"%> <span style="margin:0px 10px;font-size:15px;color:blue"><%= link_to post.user.username, profile_path(:id => post.user.id) %></span> 
  <%= time_ago_in_words post.created_at %> ago.
</p>
<p>
  <strong>Title:</strong>
  <%= link_to post.name, post_path(:id => post.id) %>
</p>
<p>
  <strong>Description:</strong>
  <%= post.content %>
</p>
<p>
  <strong>Trade for:</strong>
  <%= post.trade %>
</p>
<p>
  <strong>or Price:</strong>
  <%= post.cash && "$#{post.cash}" %>
</p>
<p>
  <strong>Status</strong>
  <%= post.status_type %>
</p>
<p>
  <!-- post.post_images is eager loaded -->
  <% @images = post.post_images %>	
  <% if !@images.blank? %>
    <% for image in @images %>
		<%= image_tag image.image_url(:iphone).to_s%>      
    <% end %>
  <% else %>
    
  <% end %>
</p>
<p>
	<div class="fb-like" data-send="false" data-href="<%= root_url.sub(/\/[^\/]*$/, '')+post_path(:id => post.id) %>" data-layout="button_count" data-width="85" data-show-faces="false"></div>
	<div><a href="https://twitter.com/share" class="twitter-share-button" data-url="<%= root_url.sub(/\/[^\/]*$/, '')+post_path(:id => post.id) %>" data-count="horizontal">Tweet</a></div>
</p>
<%= render :partial => "general/post_menu_options", :locals => { :post => post, :likers => post.likers, :favorite => get_my_favorite_post(post) }%>

<hr />
<% end %>
</div>
<a id="load_more">Load More</a>